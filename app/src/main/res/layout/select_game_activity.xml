<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorBackground2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/game_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_title"
            tools:text="Color Up"
            android:layout_gravity="center"
            android:padding="@dimen/standard_padding"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/text_size"
            android:textColor="@color/colorAccent"
            android:padding="@dimen/standard_padding"
            android:layout_margin="@dimen/standard_margin"
            android:textAllCaps="true"
            android:text="@string/select_game"
            />
        <TextView
            android:id="@+id/select_game_3x3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/text_size"
            android:background="@drawable/rounded_corner"
            android:textColor="@color/colorText"
            android:paddingTop="@dimen/standard_padding"
            android:paddingBottom="@dimen/standard_padding"
            android:paddingLeft="@dimen/large_padding"
            android:paddingRight="@dimen/large_padding"
            android:layout_margin="@dimen/standard_margin"
            android:text="3 x 3"
            />

        <TextView
            android:id="@+id/select_game_4x4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/text_size"
            android:background="@drawable/rounded_corner"
            android:textColor="@color/colorText"
            android:paddingTop="@dimen/standard_padding"
            android:paddingBottom="@dimen/standard_padding"
            android:paddingLeft="@dimen/large_padding"
            android:paddingRight="@dimen/large_padding"
            android:layout_margin="@dimen/standard_margin"
            android:text="4 x 4"
            />

        <TextView
            android:id="@+id/select_game_5x5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/text_size"
            android:background="@drawable/rounded_corner"
            android:textColor="@color/colorText"
            android:paddingTop="@dimen/standard_padding"
            android:paddingBottom="@dimen/standard_padding"
            android:paddingLeft="@dimen/large_padding"
            android:paddingRight="@dimen/large_padding"
            android:layout_margin="@dimen/standard_margin"
            android:text="5 x 5"
            />

        <TextView
            android:id="@+id/select_game_6x6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/text_size"
            android:background="@drawable/rounded_corner"
            android:textColor="@color/colorText"
            android:paddingTop="@dimen/standard_padding"
            android:paddingBottom="@dimen/standard_padding"
            android:paddingLeft="@dimen/large_padding"
            android:paddingRight="@dimen/large_padding"
            android:layout_margin="@dimen/standard_margin"
            android:text="6 x 6"
            />

        <TextView
            android:id="@+id/select_game_7x7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/text_size"
            android:background="@drawable/rounded_corner"
            android:textColor="@color/colorText"
            android:paddingTop="@dimen/standard_padding"
            android:paddingBottom="@dimen/standard_padding"
            android:paddingLeft="@dimen/large_padding"
            android:paddingRight="@dimen/large_padding"
            android:layout_margin="@dimen/standard_margin"
            android:text="7 x 7"
            />

        <TextView
            android:id="@+id/select_game_8x8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/text_size"
            android:background="@drawable/rounded_corner"
            android:textColor="@color/colorText"
            android:paddingTop="@dimen/standard_padding"
            android:paddingBottom="@dimen/standard_padding"
            android:paddingLeft="@dimen/large_padding"
            android:paddingRight="@dimen/large_padding"
            android:layout_margin="@dimen/standard_margin"
            android:text="8 x 8"
            />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>